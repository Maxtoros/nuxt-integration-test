{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "format": "prettier --write pages/",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/image": "^1.11.0",
    "eslint": "^9.37.0",
    "nuxt": "^3.19.2",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "{pages,components}/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "{pages,components}/*.vue": [
      "prettier --write",
      "eslint --fix"
    ],
    "{pages,components}/*.{json,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,css}": "prettier --write"
  }
}
